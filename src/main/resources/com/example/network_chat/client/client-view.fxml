<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.network_chat.client.ChatController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <VBox>
        <VBox>
                <Text fx:id="timerBox" text="119"/>
            <HBox fx:id="authBox">
                <TextField fx:id="loginField" promptText="Login"/>
                <PasswordField fx:id="passField" promptText="Password"/>
                <Button text="Sign in" onAction="#signinBthClc"/>
            </HBox>
        </VBox>
        <HBox fx:id="messageBox" visible="false">
            <VBox>
                <TextArea fx:id="messageArea" editable="false" VBox.vgrow="ALWAYS"/>
                <HBox spacing="10">
                    <TextField fx:id="messageField" HBox.hgrow="ALWAYS"/>
                    <Button text="Enter" defaultButton="true" onAction="#clickSendButton"/>
                </HBox>
            </VBox>
            <VBox>
                <Button text="Leave" onAction="#leaveTheChat"/>
                <ListView fx:id="clientList" maxWidth="200" minWidth="200" onMouseClicked="#selectClient"/>
            </VBox>
        </HBox>
    </VBox>
</VBox>